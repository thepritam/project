<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/snackbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg1"
    tools:context=".tutor.sportsactivity">

    <ScrollView
        android:layout_width="fill_parent"

        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutimage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mainpictutor"
                android:orientation="horizontal"></LinearLayout>



            <LinearLayout
                android:id="@+id/bhai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutimage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/edittextdescripiton"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"

                    android:layout_marginBottom="30dp"
                    android:background="@drawable/download"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Please give your Description here.(Max 100 words)"
                    android:inputType="textAutoCorrect|textMultiLine|textAutoComplete"
                    android:maxWidth="200dp"
                    android:maxLength="1500"
                    android:padding="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/spinnerslayoutsport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
               android:layout_below="@+id/bhai"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtVwsport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="50"
                    android:text="Select Level:"
                    android:textColor="#000"
                    android:textSize="22dp"
                    android:textStyle="bold|italic" />

                <Spinner
                    android:id="@+id/spinner1sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txtVw"
                    android:layout_marginLeft="53dp"
                    android:layout_toRightOf="@+id/txtVw"
                    android:textAlignment="center" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerslayoutsport"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editextweight"
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:hint="please enter Your Weight(approx) "
                        android:inputType="number"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:visibility="visible">

                    </EditText>

                    <Button
                        android:id="@+id/add_confirm_weight"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_et"
                        android:paddingLeft="5dp"
                        android:text="Confirm"
                        android:textColor="#000"
                        android:textSize="12sp">

                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editextheight"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:hint="please enter Your Height(Approx)"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:visibility="visible">

                    </EditText>

                    <Button
                        android:id="@+id/add_confirm_height"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_et"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="Confirm"
                        android:textColor="#000"
                        android:textSize="12sp">

                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner1sportfees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/edittextfess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:hint="Please Enter affordable fees"
                    android:inputType="number"
                    android:textSize="12sp"></EditText>

                <Button
                    android:id="@+id/buttonsubmit"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_et"
                    android:enabled="true"
                    android:text="Submit"></Button>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/imagesslider"
            app:itemIconTint="@drawable/selector1"
            app:itemTextColor="@drawable/selector1"

            app:menu="@menu/bottom_navigation" />
    </LinearLayout>

</RelativeLayout>